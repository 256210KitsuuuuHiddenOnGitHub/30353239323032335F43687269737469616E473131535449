<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".secondactivity">

    <ImageButton
            android:src="@drawable/arrow"
            android:layout_width="52dp"
            android:layout_height="55dp" android:id="@+id/nextWindow"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.955" app:layout_constraintTop_toBottomOf="@+id/strawBerryFrappeLayout"
            app:layout_constraintBottom_toTopOf="@+id/frameLayout4"/>
    <FrameLayout
            android:layout_width="181dp"
            android:layout_height="189dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" android:layout_marginStart="28dp" android:id="@+id/chocoFrappeLayout">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="144dp" app:srcCompat="@drawable/machine1" android:id="@+id/imageView2"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Coffee Machine 1\n₱ 320.00"/>
    </FrameLayout>

    <SearchView
            android:layout_width="162dp"
            android:layout_height="55dp" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/searchView"/>

    <FrameLayout
            android:layout_width="169dp"
            android:layout_height="185dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp" android:layout_marginEnd="16dp" android:id="@+id/strawBerryFrappeLayout">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                app:srcCompat="@drawable/machine2" android:id="@+id/imageView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:text="Coffee Machine 2\n₱ 380.00"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="177dp"
            android:layout_height="188dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chocoFrappeLayout" android:layout_marginTop="84dp"
            android:layout_marginStart="28dp">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="143dp"
                app:srcCompat="@drawable/latte" android:id="@+id/imageView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView4" android:text="Latte\n₱ 170.00"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="176dp"
            android:layout_height="185dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/strawBerryFrappeLayout"
            android:layout_marginTop="88dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931" android:id="@+id/frameLayout4">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="136dp"
                app:srcCompat="@drawable/cappucino" android:id="@+id/imageView5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView5" android:text="Cappucino\n₱ 160.00"/>
    </FrameLayout>




</androidx.constraintlayout.widget.ConstraintLayout>