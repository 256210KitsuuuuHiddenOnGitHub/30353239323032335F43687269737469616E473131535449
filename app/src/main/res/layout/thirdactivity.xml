<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".thirdActivity">

    <FrameLayout
            android:layout_width="181dp"
            android:layout_height="189dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="152dp" android:layout_marginStart="28dp" android:id="@+id/chocoFrappeLayout">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="144dp" app:srcCompat="@drawable/chocofrappe" android:id="@+id/imageView2"
        />
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView2" android:text="Choco Frappe\n ₱200.00"/>
    </FrameLayout>

    <SearchView
            android:layout_width="162dp"
            android:layout_height="55dp" android:layout_marginEnd="6dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" android:id="@+id/searchView"/>

    <FrameLayout
            android:layout_width="169dp"
            android:layout_height="185dp"
            app:layout_constraintTop_toBottomOf="@+id/searchView" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="80dp" android:layout_marginEnd="16dp" android:id="@+id/strawBerryFrappeLayout">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="138dp"
                app:srcCompat="@drawable/strawberryfrappe" android:id="@+id/imageView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView3" android:text="Strawberry Milkshake\n ₱200.00"/>
    </FrameLayout>

    <FrameLayout
            android:layout_width="177dp"
            android:layout_height="188dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/chocoFrappeLayout" android:layout_marginTop="84dp"
            android:layout_marginStart="28dp" android:id="@+id/chocoMilkshakeLayout">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="143dp"
                app:srcCompat="@drawable/chocomilkshake" android:id="@+id/imageView3"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView4"
                android:text="Chocolate Milkshake\n₱ 150.00"/>
    </FrameLayout>
    <FrameLayout
            android:layout_width="176dp"
            android:layout_height="185dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/strawBerryFrappeLayout"
            android:layout_marginTop="88dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.931" android:id="@+id/mangoMilkshakeLayout">
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="136dp"
                app:srcCompat="@drawable/mangomilkshake" android:id="@+id/imageView5"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="bottom"
                android:layout_height="wrap_content" android:id="@+id/textView5"
                android:text=" Mango Milkshake\n₱ 10.00"/>
    </FrameLayout>
    <ImageButton
            android:src="@drawable/arrow_1"
            android:layout_width="50dp"
            android:layout_height="56dp" android:id="@+id/backWindow"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/chocoFrappeLayout"
            android:layout_marginTop="12dp" android:layout_marginStart="28dp"
            app:layout_constraintBottom_toTopOf="@+id/chocoMilkshakeLayout" app:layout_constraintVertical_bias="0.125"/>

</androidx.constraintlayout.widget.ConstraintLayout>